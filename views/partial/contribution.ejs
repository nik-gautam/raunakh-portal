<div class="donation-bar">
  <div class="inner py-5">
    <div class="my-5">
      <h2 class="mb-3 mt-2">WE ARE VERY THANKFUL</h2>
      <hr class="mb-5">
      <h3 class="my-3">Help Us Reach Our Goal</h3>
      <h1 class="mt-3 mb-5"><i class="fas fa-praying-hands px-2"></i> PLEASE KEEP DONATING <i class="fas fa-praying-hands px-2"></i></h1>
      <div>
        <h5><em>Contributors: 3</em></h5>
        <h2>Total Contribution</h2>
        <h1 class="donation-amount mb-5">₹ 159.43</h1>
      </div>


      <div class="card donation-box my-3 mt-5">
        <h3 class="mb-2 mt-4">THE DONATION BOX</h3>
        <form action="/payment" method="post">
          <div class="row justify-content-around m-2">
            <div class="col-5 my-2 donation-options">₹ 50</div>
            <div class="col-5 my-2 donation-options">₹ 100</div>
            <div class="col-5 my-2 donation-options">₹ 200</div>
            <div class="col-5 my-2 donation-options">₹ 500</div>
            <input type="text" class="col-11 my-2 donation-options" name="amount" placeholder="enter donation amount" />
            <hr>
            <button type="submit" class="btn bg-warning text-light btn-lg px-4 py-2 my-2 col-11" col><b>DONATE <i class="fas fa-hand-holding-heart mx-2"></i></b></button>
          </div>
        </form>
      </div>

      
      <form action="/payment" method="post">
        
      </form>
      <div class="text-center"> 
        <% donators.forEach(function(donator){ %>
          <h4><%= donator.email %> donated <%= donator.currency %> <%= donator.amount %> </h4>
        <% }); %>
      </div>
    </div>
    
  </div>
  
</div>