<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>


    <title>Donations</title>
  </head>
  <body>
    <div class="container">
      <div class="row mt-4">
        <div class="col-8">
          <h3>Live Donation Count</h3>
        </div>
        <div class="col-4">
          <a class="btn btn-primary" href="/logout">logout</a>
          <button id="download-csv" class="btn btn-primary ml-2">
            download csv
          </button>
        </div>
      </div>

      <div class="mt-5">
        <table id="donation-table" class="table border">
          <thead class="thead-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Email</th>
              <th scope="col">Contact</th>
              <th scope="col">Method</th>
              <th scope="col">Amount</th>
              <th scope="col">Currency</th>
              <th scope="col">Order Id</th>
              <th scope="col">Date</th>
            </tr>
          </thead>

          <!-- table heading -->
          <tbody>
            <% donators.forEach(function(donator, index){ %>
            <!-- table row -->
            <tr>
              <th scope="row" class="sno"><%= index + 1 %></th> 
              <td><%= donator.email %></td>
              <td><%= donator.contact %></td>
              <td><%= donator.method %></td>
              <td><%= donator.amount %></td>
              <td><%= donator.currency %></td>
              <td><%= donator.order_id %></td>
              <td>
                <%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month:
                'long', day: '2-digit'}).format(new
                Date(donator.date_created).getTime()) %>
              </td>

              <!-- table row end -->
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- table end -->
  </body>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/javascripts/table.js"></script>
</html>
